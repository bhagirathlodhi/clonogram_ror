
<div class="col-lg-10">
  <div class="card rounded-0 shadow mt-5 mb-5">
    <div class="card-body">

      <p><%= notice %></p>
      <h1>Post Details</h1>

      <% @posts.each do |post| %>

        <p><strong>Title: </strong> <%= post.title %></p>

        <p><strong>Description: </strong><%= post.description %></p>
        <%= link_to "edit post", edit_post_path(post), class: "btn btn-primary" %>
        <%= link_to "comment", new_user_comment_path(post), class: "btn btn-primary" %>
      <% end %>
      <br>
      <br>
      <%= link_to 'Back', posts_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
